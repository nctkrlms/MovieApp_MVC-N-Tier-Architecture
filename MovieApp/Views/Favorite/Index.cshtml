@using EntityLayer.Concrete
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/movie.css" rel="stylesheet" />
<div class="col">
    <h2>Favorites</h2>
    <div class="">
        @foreach (var item in Model)
        {


            if (Convert.ToInt32(Session["UserId"]) == @item.UserId)
            {
                <div class="container" style="margin-top:50px;">

                    <div class="col-md-4 " style="float:left;">
                        <div class="card-sl m-3">
                            <div class="card-image">
                                <img src="@item.Movie.Img" />
                            </div>

                            <a class="card-action" href="/Favorite/AddFav/@item.MovieId"><i class="fa fa-heart"></i></a>
                            <div class="card-heading">
                                @item.Movie.MovieName
                            </div>
                            <div class="card-text">
                                @item.Movie.Description
                            </div>
                            <div class="card-text">
                                <p>@item.Movie.Category.CategoryName</p>
                            </div>
                            <a href="/Movie/MovieDetail/@item.Movie.MovieId" class="card-button"> Details</a>
                        </div>
                    </div>

                </div>
            }




        }
    </div>
</div>

